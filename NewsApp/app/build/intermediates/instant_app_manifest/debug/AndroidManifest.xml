<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uwaterloo.newsapp"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="ca.uwaterloo.newsapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.uwaterloo.newsapp.ui.login.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="ca.uwaterloo.newsapp.ui.signup.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="ca.uwaterloo.newsapp.ui.news.NewsActivity"
            android:theme="@style/AppTheme.Dark" />

        <provider
            android:name="android.arch.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="ca.uwaterloo.newsapp.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>